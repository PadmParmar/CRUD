<html>
<head>
    <title>CRUD</title>
    <meta charset="utf-8">

  <meta name="viewport" content="width=device-width, initial-scale=1">
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
  <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
  <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
    <style>

      #divChat
      {
        background-color: purple;
        border-radius:10px;
        box-shadow: 0px 5px 10px black;
        margin-top: 15%;

        padding: 5px;
      }
      button{
          background-color: gray;
          border-radius: 1px;
          color: white;
          padding: 3px;
      }
      .box_shadow{
        box-shadow: 0px 5px 10px black;
        border-radius: 10px;
        border: 0;
        width: 100%;
      }
      label{
        color: white;
      }
    </style>
</head>
<body>
  
  <div class="container">
    <div class="row">
      <div class="col-lg-4 col-md-4"></div>
      <div id="divChat" class="col-lg-4 col-md-4">
          <form action="/add" method="POST">
            <br>
            <div class="row">
              <div class="col-lg-2 col-md-2"></div>
              <div class="col-lg-3 col-md-3">
                <label>Name:</label>
              </div>
              <div class="col-lg-5 col-md-5">
                <input class="box_shadow"  type="text" name="name" />
              </div>
              <div class="col-lg-2 col-md-2"></div>
            </div>

            <br>
            <div class="row">
              <div class="col-lg-2 col-md-2"></div>
              <div class="col-lg-3 col-md-3">
                <label>Bookname:</label>
              </div>
              <div class="col-lg-5 col-md-5">
                <input class="box_shadow" type="text" name="bookname" />
              </div>
              <div class="col-lg-2 col-md-2"></div>
            </div>
            <br>
            <div class="row">
              <div class="col-lg-2 col-md-2"></div>
              <div class="col-lg-3 col-md-3">
                <label>Path:</label>
              </div>
              <div class="col-lg-5 col-md-5">
                <input class="box_shadow" type="text"  name="path" />
              </div>
              <div class="col-lg-2 col-md-2"></div>
            </div>
            <br>
            <div class="row">
              <div class="col-lg-4 col-md-4"></div>
              <div class="col-lg-4 col-md-4">
                <center>
                  <button class="box_shadow" type="submit">Submit</button>
                </center>
              </div>
              <div class="col-lg-4 col-md-4"></div>
            </div>
          </form>
        </div>
        <div class="col-lg-4 col-md-4"></div>
      </div>
    </div>
</body>
</html>